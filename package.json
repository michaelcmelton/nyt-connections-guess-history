{
  "name": "connections",
  "version": "1.0.0",
  "description": "This Chrome Extension keeps a record of the user's guess history in the NYT's daily game Connections.",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test --config playwright-extension.config.ts",
    "test:e2e:ui": "playwright test --ui --config playwright-extension.config.ts",
    "test:e2e:headed": "playwright test --headed --config playwright-extension.config.ts",
    "test:e2e:debug": "playwright test --debug --config playwright-extension.config.ts",
    "test:e2e:install": "playwright install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "svelte": "^5.38.10",
    "vite": "^7.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/svelte": "^4.0.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.254",
    "@types/node": "^24.5.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^24.0.0",
    "svelte-check": "^3.6.0",
    "typescript": "^5.0.0",
    "vite-plugin-copy": "^0.1.0",
    "vitest": "^3.2.4"
  }
}
